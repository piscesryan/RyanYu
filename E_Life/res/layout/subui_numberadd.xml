<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subui_numberAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/subui_numberadd_editText_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:maxLength="11" />

        <Button
            android:id="@+id/subui_numberadd_button_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/subui_weather_editText_city"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="查询" />
    </RelativeLayout>

    <TextView
        android:id="@+id/subui_numberAdd_textView_getresult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="查询结果:"
        android:textColor="#080808"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/subui_numberAdd_textView_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="号　码:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/subui_numberAdd_textView_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="类　别:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/subui_numberAdd_textView_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="归属地:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</LinearLayout>